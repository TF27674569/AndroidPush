<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/sv_camera"
        android:layout_width="1080px"
        android:layout_height="1920px" />

    <EditText
        android:id="@+id/et_rtmp_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_push_to_rtmp"
        android:gravity="center"
        android:hint="input your rtmp address"
        android:text="rtmp://192.168.0.10/live/demo"
        android:shadowColor="#ffffff" />


    <Button
        android:id="@+id/btn_push_to_rtmp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="push to rtmp server" />

</RelativeLayout>
